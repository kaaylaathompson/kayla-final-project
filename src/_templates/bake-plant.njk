{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ headline }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
          <img src="../img/{{ slug }}.jpg" alt="" class="img-fluid mb-4">
      </div>
      <div class="col-sm-8">
          <h1>{{ headline }}</h1>
          <h3>{{ subhead }}</h3>
          <p>{{ post }}</p>
      </div>
    </div>
  </article>
{% endblock %}